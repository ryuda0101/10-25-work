<% if(!userData){ %>
    <script>
        alert("비회원은 접근할수 없는 페이지 입니다.")
        location.href = "/login";
    </script>
<% } %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>고객센터</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">

    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- 헤더영역 -->
    <%- include("common/header.ejs") %>
    <!-- 배너영역 -->
    <%- include("common/contact_banner.ejs") %>

    <div id="brd_list">
        <div class="center">
            <div class="top_text">
                <h2>CONTACT US</h2>
                <p>GET IN TOUCH</p>
            </div>
            <table class="brd_top">
                <tr class="brd_top">
                    <th class="number">번호</th>
                    <th >제목</th>
                    <th class="date">등록일자</th>
                    <th class="auther">작성자</th>
                </tr>
                <!-- 반복문으로 데이터 받아와서 여기에 넣어주기 -->
                <% brdinfo.forEach(function(el, index){ %>
                    <tr class="brd_bot">
                        <th class="number"><%- el.brd_id %></th>
                        <th class="title user_title"><a href="/detail/<%- el.brd_id %>"><%- el.brd_title %></a></th>
                        <th class="date user_date"><%- el.brd_date %></th>
                        <th class="auther"><%- el.brd_name %></th>
                    </tr>
                <% }); %>
            </table>
            <a class="write" href="/insert">글 작성</a>
            <!-- 검색 메뉴 -->
            <form action="/search" method="get" class="search_menu">
                <select name="search_menu" id="search_menu">
                    <option value="brd_title">제목</option>
                    <option value="brd_context">내용</option>
                    <option value="brd_name">작성자</option>
                </select>
                <input type="text" name="searchInput" id="searchInput">
                <button class="search_btn" type="submit">검색</button>
            </form>
        </div>
    </div>

    <!-- 풋터영역 -->
    <%- include("common/footer.ejs") %>
    
</body>
</html>